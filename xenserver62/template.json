{
    "provisioners": [
        {
            "type": "file",
            "source": "packer_cache/62/",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/xenserver/vagrant.sh",
		"scripts/xenserver/hotfix-XS62p1.sh",
		"scripts/xenserver/reboot.sh",
                "scripts/xenserver/hotfix-XS62p2.sh",
		"scripts/xenserver/reboot.sh",
		"scripts/xenserver/cleanup.sh",
                "scripts/xenserver/zerodisk.sh"
            ]
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<wait>menu.c32",
                "<enter><wait><tab>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<wait>",
                "answerfile=http://{{ .HTTPIP }}:{{ .HTTPPort }}/answerfile install ",
                "--- /install.img<enter>"
            ],
            "boot_wait": "5s",
            "guest_additions_mode": "disable",
            "headless": false,
            "disk_size": 51200,
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "iso_checksum": "d63e4c917da22af69ff8f1679c794dce",
            "iso_checksum_type": "md5",
            "iso_url": "http://downloadns.citrix.com.edgesuite.net/akdlm/8159/XenServer-6.2.0-install-cd.iso",
            "shutdown_command": "/sbin/shutdown -hP now",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "10000s",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "XenServer62",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ]
        },
       {
            "type": "vmware-iso"
       }
    ],
    "post-processors": [
        {
            "compression_level": 9,
            "output": "output/XenServer62-{{.Provider}}.box",
            "type": "vagrant",
            "vagrantfile_template": "Vagrantfile.template"
        }
    ]
}
