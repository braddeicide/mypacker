{
  "variables": {
    "mirror": "http://mirror.internode.on.net/pub/FreeBSD/"
  },
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/freebsd/postinstall.sh",
        "scripts/freebsd/puppet.sh",
        "scripts/freebsd/cleanup.sh",
        "scripts/freebsd/vmtools.sh",
        "scripts/common/minimize.sh"
      ],
      "execute_command": "export {{.Vars}} && cat {{.Path}} | su -m"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": false,
      "boot_command": [
        "<esc><wait>",
        "boot -s<wait>",
        "<enter><wait>",
        "<wait10><wait10>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait>",
        "fetch -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/freebsd-10.3/install.sh && chmod +x /tmp/install.sh && /tmp/install.sh {{ .Name }}<enter><wait>"
      ],
      "boot_wait": "7s",
      "disk_size": 10140,
      "guest_os_type": "FreeBSD_64",
      "http_directory": "freebsd-10.3-amd64/http",
      "iso_checksum": "fef068cf6dea26923ab84b62ba9f21461ca0bdec90a0741c8ffb0e1ca29e410d",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/amd64/amd64/ISO-IMAGES/10.3/FreeBSD-10.3-RELEASE-amd64-disc1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -p now' > shutdown.sh; cat 'shutdown.sh' | su -",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-freebsd-10.3-amd64",
      "output_directory": "packer-freebsd-10.3-amd64-virtualbox",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "load geom_mbr<wait>",
        "<enter><wait>",
        "load zfs<wait>",
        "<enter><wait>",
        "boot -s<wait>",
        "<enter><wait>",
        "<wait10><wait10>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait>",
        "<wait5>",
        "fetch -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/freebsd-10.3/install.sh && chmod +x /tmp/install.sh && /tmp/install.sh {{ .Name }}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10140,
      "guest_os_type": "freebsd-64",
      "http_directory": "freebsd-10.3-amd64/http",
      "iso_checksum": "fef068cf6dea26923ab84b62ba9f21461ca0bdec90a0741c8ffb0e1ca29e410d",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/amd64/amd64/ISO-IMAGES/10.3/FreeBSD-10.3-RELEASE-amd64-disc1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -p now' > shutdown.sh; cat 'shutdown.sh' | su -",
      "vm_name": "packer-freebsd-10.3-amd64",
      "output_directory": "packer-freebsd-10.3-amd64-vmware",
      "tools_upload_flavor": "freebsd",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "post-processors": [
    {
      "output": "output/freebsd-10.3-amd64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ]
}
